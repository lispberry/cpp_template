{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Dev",
            "description": "Base of dev config",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "USE_ASAN": "ON",
                "USE_UBSAN": "ON"
            }
        },
        {
            "name": "CI",
            "description": "Base of CI config",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "USE_ASAN": "ON",
                "USE_UBSAN": "ON"
            }
        },
        {
            "name": "Dev Mac",
            "description": "Dev config for Mac",
            "inherits": "Dev",
            "hidden": false
        }
    ],
    "buildPresets": [
        {
            "name": "Hello World",
            "description": "Base of dev build",
            "configurePreset": "Dev Mac",
            "targets": [
                "cmd_hello_world"
            ]
        },
        {
            "name": "CI",
            "description": "Base of CI build",
            "configurePreset": "CI",
            "targets": [
                "all"
            ]
        },
        {
            "name": "CI",
            "description": "Base of CI build",
            "configurePreset": "CI",
            "targets": [
                "all"
            ]
        }
    ]
}